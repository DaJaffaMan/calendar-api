    "version": "0.2.0",
    "configurations": [
        {
			"name": "Calendar API",
			"type": "node",
			"request": "launch",
			"args": ["${workspaceRoot}/src/index.ts"],
			"runtimeArgs": ["-r", "ts-node/register", "-r", "dotenv/config"],
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"TS_NODE_IGNORE": "false"
            },
            "envFile": "${workspaceFolder}/.env"
		}
    ]
}